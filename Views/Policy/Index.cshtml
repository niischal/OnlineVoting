@model IEnumerable<OnlineVoting.Models.Policy>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PolicyTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PolicyDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PolicyYesVote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Election)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyYesVote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Election.ElectionId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PolicyID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PolicyID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PolicyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
