@*Define Model*@
@model IEnumerable<Candidate>
@*Define ViewData*@
@{
    ViewData["Title"] = "List of Candidate";
}

<div class='row'>
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.CandidateName
                                     
                                     <a class="text-white float-right" asp-action="Remove" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <img width="100%" src="@item.CandidateIcon" alt="@item.CandidateName" >
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-success text-white" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"> </i>  Edit</a>
                                
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"> </i> Show Details
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-white" style="position:fixed; right:25px;bottom:25px;">
    <a asp-controller="Candidate" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle" ></i>  Add New</a>
</div>
