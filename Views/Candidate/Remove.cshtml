@model OnlineVoting.Models.Candidate

@{
    ViewData["Title"] = "Remove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Remove</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Candidate</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CandidateIcon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CandidateIcon)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CandidateName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CandidateName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position.PositionTitle)
        </dd>
    </dl>
    
    <form asp-action="Remove">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.PositionId">Back to List</a>
    </form>
</div>
