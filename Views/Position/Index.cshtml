@model IEnumerable<OnlineVoting.Models.Position>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Election)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Election.ElectionName)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-square-fill"></i></a> |
                <a asp-action="Remove" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
            </td>
             <td>
                <div class="btn btn-outline-primary">
                       <a asp-action="Index" asp-controller="Candidate" asp-route-id="@item.Id">View Candidates</a>
                </div>
            </td>
            <td>
                <div class="btn btn-outline-primary">
                    <a asp-action="Create" asp-controller="Candidate" asp-route-id="@item.Id">Add Candidate</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
